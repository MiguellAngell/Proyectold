{% extends 'layout.html.twig' %}

{% block title %}
    Detalle: {{ grupos.nombre }}
{% endblock %}

{% block content %}
    {% for mensaje in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ mensaje }}
        </div>
    {% endfor %}
    <h1>{{ grupos.id ? grupos.nombre : 'Nuevo grupo' }}</h1>

    {{ form_start(formulario) }}
    {{ form_widget(formulario) }}
    <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
             <button type="submit" class="btn btn-success">Guardar cambios</button>
             {% if grupos.id %}<a href="{{ path('grupos_eliminar', {'id': grupos.id}) }}" class="btn btn-danger"><i class="fa fa-trash"></i> Eliminar</a>{% endif %}
             <a href="{{ path('grupos_listar') }}" class="btn btn-primary"><i class="fa fa-arrow-left"></i> Volver al listado de grupos</a>
        </div>
    </div>
    {{ form_end(formulario) }}


    <a href="{{ path('grupos_listar') }}" class="btn btn-primary"><i class="fa fa-arrow-left"></i> Volver al listado de grupos</a>
{% endblock %}

