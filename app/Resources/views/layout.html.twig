{% extends 'base.html.twig' %}

{% block body %}
    <!-- Fixed navbar -->
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('inicio') }}"><i class="fa fa-lightbulb-o"></i> EnlaceWEB</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li{% if app.request.attributes.get('_route') == 'inicio' %} class="active"{% endif %}><a href="{{ path('inicio') }}"><i class="fa fa-home"></i> Inicio</a></li>
                    <li{% if app.request.attributes.get('_route') == 'enlaces_listar' %} class="active"{% endif %}><a href="{{ path('enlaces_listar') }}"><i class="fa fa-list"></i> Enlaces</a></li>
                    <li{% if app.request.attributes.get('_route') == 'usuarios_listar' %} class="active"{% endif %}><a href="{{ path('usuarios_listar') }}"><i class="fa fa-list"></i> Usuarios</a></li>
                    <li{% if app.request.attributes.get('_route') == 'grupos_listar' %} class="active"{% endif %}><a href="{{ path('grupos_listar') }}"><i class="fa fa-list"></i> Grupos</a></li>
                    <li{% if app.request.attributes.get('_route') == 'categorias_listar' %} class="active"{% endif %}><a href="{{ path('categorias_listar') }}"><i class="fa fa-list"></i> Categorias</a></li>
                    <li{% if app.request.attributes.get('_route') == 'administrar_listar' %} class="active"{% endif %}><a href="{{ path('administrar_listar') }}"><i class="fa fa-list"></i> Administrar</a></li>
                    <li{% if app.request.attributes.get('_route') == 'gestiona_listar' %} class="active"{% endif %}><a href="{{ path('gestiona_listar') }}"><i class="fa fa-list"></i> Gestion Categorias</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    {% if app.user %}
                        <p class="navbar-text">Conectado como <a href="{{ path('usuario_cambiar_clave') }}">{{ app.user }}</a></p>
                    {% endif %}
                    {% if app.user %}
                        <li><a href="{{ path('usuario_salir') }}"><i class="fa fa-sign-out"></i> Salir</a></li>
                    {% else %}
                        <li><a href="{{ path('usuario_entrar') }}"><i class="fa fa-sign-in"></i> Acceder</a></li>
                    {% endif %}
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </nav>

    <div class="container">
        {% block content %}{% endblock %}
    </div>
{% endblock %}