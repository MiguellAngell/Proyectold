{% extends 'layout.html.twig' %}

{% block title %}
    Detalle: {{ enlace.titulo }}
{% endblock %}

{% block content %}
    <h1>{{ enlace.titulo }}</h1>
    <h2>Propuesta por {{ enlace.autor }} el {{ enlace.fecha_propuesta|date('d/m/Y') }}</h2>
    <p>{{ enlace.descripcion }}</p>

    <a href="{{ path('enlaces_listar') }}">Volver al listado de enlaces</a>
{% endblock %}

