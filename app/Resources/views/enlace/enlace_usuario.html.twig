{% extends 'layout.html.twig' %}

{% block title 'Enlaces de {{ usuario }}' %}

{% block content %}
    <h1>Lista de enlaces por {{ usuario }}</h1>

    <table class="table table-bordered table-hover table-striped">
        <thead>
        <tr>
            <th>Nombre</th>
            <th>Autor</th>
            <th>Descripcion</th>
        </tr>
        </thead>
        <tbody>
        {% for link in enlace %}
            <tr>
                <td><a href="{{ path('enlaces_mostrar', {'id': link.id}) }}">{{ link.nombre }}</a></td>
                <td>{{ link.autor}}</td>
                <td>{{ link.descripcion }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No hay enlaces que mostrar</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('enlaces_listar') }}" class="btn btn-primary"><i class="fa fa-arrow-left"></i> Volver al listado completo de enlaces</a>
{% endblock %}
