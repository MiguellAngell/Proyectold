{% extends 'layout.html.twig' %}

{% block title 'Lista de informacion' %}

{% block content %}
    <h1>Informacion de los enlace</h1>

    <table class="table table-bordered table-hover table-striped">
        <thead>
        <tr>
            <th>Usuario</th>
            <th>Nombre Enlace</th>
            <th>Fecha subida</th>
            <th>Fecha aceptacion</th>
            <th>Fecha rechazo</th>
            <th>Observaciones</th>
        </tr>
        </thead>
        <tbody>
        {% for adm in administrar %}
            <tr>
                <td>{{ adm.idUsuario }}</td>
                <td>{{ adm.idEnlace.nombre}}</td>
                <td>{{ adm.fechaSubida|date('d/m/Y') }}</td>
                <td>{{ adm.fechaAceptacion|date('d/m/Y') }}</td>
                <td>{{ adm.fechaRechazo|date('d/m/Y') }}</td>
                <td>{{ adm.observaciones }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No hay informacion que mostrar</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
